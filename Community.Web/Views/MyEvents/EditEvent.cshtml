@model Event

@{
    ViewData["Title"] = "MyEvents | C+";
}

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/MyEvents", "MyEvents"), ("","Edit") }) />
<partial name="_DeleteEventModal" /> 
<div asp-roles="Admin,Manager" class="card rounded shadow p-3">
    <h3 class="mt-4 mb-4">Edit booking request</h3>
</div>

<div asp-roles="Admin,Manager" class="card rounded shadow p-3">
    <form asp-action="EditEvent">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="VenueId" class="form-control" />
        <!-- form inputs -->
        <partial name="_EventInputForm" />

        <div class="form-group">
            <label asp-for="Status" class="control-label"></label>
            <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<Status>()">
                <option>Select Status</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <br>
            <input type="submit" value="Save" class="btn btn-primary" />
            <a class="btn btn-secondary" asp-action="Details" asp-route-id=@Model.Id>Cancel</a>
        </div>
    </form>
    <button class="btn btn-danger my-1 " style="width: 100px;" data-toggle="modal" data-target="#deleteEventModal">Delete
        Booking
    </button>
</div>
