@model Review

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/MyPlaces", "MyPlaces"), ("","Delete") })>

<div class="card rounded shadow p-3">
    <h3 class="mt-4 mb-4">Delete Review</h3>
    <h4 class="mb-4">Are you sure you want to delete this review?</h4>
</div>

<div class="col card rounded shadow p-3">
    <div class="row pl-3">
        <div class="col-8 pt-3">
            <dl class="row ">
                <dt class="col-5">Name</dt>
                <dd class="col-7">@Model.Name</dd>

                <dt class="col-5">Review</dt>
                <dd class="col-7">@Model.Comment</dd>

                <dt class="col-5">Rating</dt>
                <dd class="col-7">@Model.Rating</dd>

                <dt class="col-5">Added on</dt>
                <dd class="col-7">@Model.CreatedOn</dd>
                    
            </dl>
        </div>
    </div>
        
<div class="mt-4">
    <form asp-controller="MyPlaces" asp-action="DeleteConfirmReview" type="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-controller="MyPlaces" asp-action="Index">Cancel</a>
    </form> 
</div>