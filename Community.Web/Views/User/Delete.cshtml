@model User

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/User", "Users"), ("","Delete") })>
<div class="card rounded shadow p-3">
    <h3 class="mt-4 mb-4">Delete User?</h3>

    <h4 class="mb-4">Are you sure you want to delete this User?</h4>
</div>

<div>
    <div class="col card rounded shadow p-3">
        <div class="row pl-3">
           
            <div class="col-8 pt-3">
                <dl class="row">
                    <dt class="col-5">Name</dt>
                    <dd class="col-7">@Model.Name</dd>

                    <dt class="col-5">Id</dt>
                    <dd class="col-7">@Model.Id</dd>

                    <dt class="col-5">Email</dt>
                    <dd class="col-7">@Model.Email</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="mt-4">

        <form asp-controller="User" asp-action="DeleteConfirm" type="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirm" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-controller="User" asp-action="Index"
                        >Cancel</a>
        </form>
    </div>
</div>
@{
    ViewData["Title"] = "User Management | C+";
}