    <div class="container card rounded shadow p-3 ">
        <div class="col m-3">

            @foreach (var p in Model)
            {
                <!--- <td>p.PhotoTitle</td> -->
                <div class="row">
                    <div>
                        <td>@p.PhotoId</td>
                        <td><img src="@p.PhotoDataUrl" width="300" height="300" /></td>
                    </div>
                    <div>
                        <a class="bi bi-arrows-fullscreen" asp-controller="MyPhotos" asp-action="Details"
                        asp-route-id="@p.PhotoId"></a>
                      
                    </div>
                </div>
            }
            <!--- Loop ends -->

        </div>
    </div>

    @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
