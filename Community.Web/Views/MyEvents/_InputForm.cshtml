@model Venue

<input type="hidden" asp-for="CommunityId" class="form-control"/>

<div class="form-group col">
    <label asp-for="Name" class="control-label">Venue Name</label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Address" class="control-label">Address</label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="SocialDistance" class="control-label">Current social disancing guidlines (m)</label>
    <input asp-for="SocialDistance" class="form-control" />
    <span asp-validation-for="SocialDistance" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="OriginalCapacity" class="control-label">Regular capacity(pre-COVID)</label>
    <input asp-for="OriginalCapacity" class="form-control" />
    <span asp-validation-for="OriginalCapacity" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Description" class="control-label">Description</label>
    <textarea rows="5" asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>



