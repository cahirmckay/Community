@model Event


<div class="card rounded shadow p-3">
    <h3 class="mt-4 mb-4">Make a booking request</h3>
</div>

<div class="card rounded shadow p-3">
    <form asp-action="AddEvent">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="VenueId" class="form-control" />
        <input type="hidden" asp-for="Status" class="form-control" />


        <div class="form-group col">
            <label asp-for="Name" class="control-label">Venue Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group col">
            <label asp-for="StartTime" type="time" class="control-label">Select start time</label>
            <input asp-for="StartTime" class="form-control" />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>

        <div class="form-group col">
            <label asp-for="EndTime" type="time" class="control-label">Select end time</label>
            <input asp-for="EndTime" class="form-control" />
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>

        <div class="form-group">
            <br>
            <input type="submit" value="Add" class="btn btn-primary" />
            <a class="btn btn-secondary" asp-action="Details" asp-route-id=@Model.Id>Cancel</a>
        </div>
    </form>
</div>
