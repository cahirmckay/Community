@model IList<Post>

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/Home/DashBoard", "DashBoard"), ("","MyChats") })>
<div class="container">
    <div class="card rounded shadow p-3">
        <h3 class="mb-3">MyChats</h3>
        <a class="btn btn-sm btn-primary mb-3" asp-controller="MyChats" asp-action="Create">Join the conversation</a>
    </div>

    
        
            @foreach (var post in Model)
            {
            <div class=" card rounded shadow p-3 text-centre my-4" style="justify-content: center;">
                <table>
                    <tr>
                        <h3>@post.Name</h3>
                        <td>(@post.PostType)</td>
                    </tr>
                    <tr>
                        <td class = "col-8">@post.PostText</td>
                    

                        <td class = "col-1">
                            <a class="btn btn-primary my-1" style="width: 80px;" asp-controller="MyChats" asp-action="Details"
                            asp-route-id="@post.Id">View</a>
                            <a class="btn btn-info" style="width: 80px;" asp-controller="MyChats" asp-action="Edit" asp-route-id=@post.Id>Edit</a>
                            <!---<a class="btn btn-danger my-1" style="width: 80px;" asp-controller="MyChats" asp-action="Delete"
                            asp-route-id=@post.Id>Delete</a>
                            <button class="btn btn-sm btn-danger mr-2" id="#myBtn" data-toggle="modal" data-target="#deletePostModal">Delete
                            </button>--->
                        </td>
                    </tr>
                    <td class = "col-1">@post.CreatedOn</td>
                </table>
            </div>
            }
            <!--- Loop ends -->
        
</div>
<!---<partial name="_DeletePostModal" />--->