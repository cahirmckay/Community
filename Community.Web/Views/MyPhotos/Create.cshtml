@model Photo
@{
    ViewData["Title"] = "MyPhotos | C+";
}
<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/MyPhotos", "MyPhotos"), ("","Create") }) />

<div class="card rounded shadow p-3">
    <h3 class="mt-4 mb-4">Upload Photo</h3>
</div>

<div class="card rounded shadow p-3">


    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PhotoTitle" class="control-label">Title</label>
            <input asp-for="PhotoTitle" class="form-control" />
            <span asp-validation-for="PhotoTitle" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Description</label>
            <textarea rows="3" asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="m-4">
            <input type="file" id="file1" name="file1" multiple="multiple" />
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>



@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}