@model Business

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/MyPlaces", "MyPlaces"), ("","Delete") })>
<div class="card rounded shadow p-3">
    <h3 class="mt-4 mb-4">Delete Business?</h3>

    <h4 class="mb-4">Are you sure you want to delete this Business?</h4>
</div>

<div>
    <div class="col card rounded shadow p-3">
        <div class="row pl-3">
            <div class="col-4">
                <img src="@Model.PosterUrl" class="img-fluid ">
            </div>
            <div class="col-8 pt-3">
                <dl class="row">
                    <dt class="col-5">Title</dt>
                    <dd class="col-7">@Model.Title</dd>

                    <dt class="col-5">Type</dt>
                    <dd class="col-7">@Model.Type</dd>

                    <dt class="col-5">Description</dt>
                    <dd class="col-7">@Model.Description</dd>

                    <dt class="col-5">Rating</dt>
                    <dd class="col-7">@Model.Rating</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="mt-4">

        <form asp-controller="MyPlaces" asp-action="DeleteConfirm" type="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirm" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-controller="MyPlaces" asp-action="Details"
                        asp-route-id="@Model.Id">Cancel</a>
        </form>
    </div>
</div>
